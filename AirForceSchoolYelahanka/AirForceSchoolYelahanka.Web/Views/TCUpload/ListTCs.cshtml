@model IEnumerable<AirForceSchoolYelahanka.Web.ViewModel.TCUpload.TCUploadViewModel>
@{
    ViewData["Title"] = "Transfer Certificates";
}

<div class="container mt-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
        <h2 class="mb-2 mb-md-0">Transfer Certificates</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Upload New TC
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tcTable" class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>#</th>
                            <th>Admission No</th>
                            <th>Student Name</th>
                            <th>Class</th>
                            <th>Issued On</th>
                            <th>Date of Leaving</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int index = 1;
                            foreach (var tc in Model)
                            {
                                <tr>
                                    <td class="fw-bold text-center">@index</td>
                                    <td>@tc.AdmissionNo</td>
                                    <td>@tc.StudentName</td>
                                    <td>@tc.Class</td>
                                    <td>@tc.IssuedOn.ToString("dd-MMM-yyyy")</td>
                                    <td>@tc.DateOfLeaving.ToString("dd-MMM-yyyy")</td>
                                    <td class="text-center">
                                        <a href="@Url.Content(tc.FilePath)" target="_blank" class="btn btn-danger btn-sm">
                                            <i class="bi bi-file-earmark-pdf"></i> View PDF
                                        </a>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="bi bi-exclamation-circle"></i> No Transfer Certificates uploaded yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tcTable').DataTable({
                responsive: true,        // 🔥 Makes table adapt to mobile screens
                "pageLength": 10,
                "lengthMenu": [5, 10, 25, 50, 100],
                "ordering": true,
                "searching": true,
                "language": {
                    "search": "🔍 Search:",
                    "lengthMenu": "Show _MENU_ records per page",
                    "zeroRecords": "No matching records found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No records available",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                }
            });
        });
    </script>
}
