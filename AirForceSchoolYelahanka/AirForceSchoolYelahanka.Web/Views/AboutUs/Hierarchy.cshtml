@{
    ViewData["Title"] = "Leadership & Governance Structure";
}

<section class="py-5 bg-light text-center" id="org-structure">
    <div class="container">
        <h2 class="display-5 fw-bold text-primary mb-4">Leadership & Governance Structure</h2>

        <div class="org-image-wrapper">
            <picture>
                <!-- Optional: Mobile-optimized version -->
                <source srcset="/images/aboutus/org-chart-mobile.png" media="(max-width: 576px)">
                <!-- Optional: Tablet-optimized version -->
                <source srcset="/images/aboutus/org-chart-tablet.png" media="(max-width: 992px)">
                <!-- Default (desktop) -->
                <img src="/images/aboutus/org-chart-desktop.png" alt="Organization Chart" class="img-fluid rounded shadow" />
            </picture>
        </div>
    </div>
</section>
