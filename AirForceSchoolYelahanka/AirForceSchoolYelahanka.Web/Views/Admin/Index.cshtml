@using System.Text.Json
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-4">
    <h1 class="mb-4 d-flex align-items-center">
    <i class="bi bi-speedometer2 me-2 text-primary"></i>
    Admin Dashboard
    </h1>

    <div class="row g-3">
        <!-- Manage Pages -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card admin-card text-center shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="icon-wrapper bg-primary text-white mb-3">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <h6 class="card-title">News, Notice and VideoGallery</h6>
                    <p class="small text-muted">Author content for News, Notice and VideoGallery sections</p>
                    <a href="/Admin/EditHomePageRollersSection" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4 col-lg-3">
            <div class="card admin-card text-center shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="icon-wrapper bg-primary text-white mb-3">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <h6 class="card-title">Activites</h6>
                    <p class="small text-muted">Author content for activities menu sections for junior and senior</p>
                    <a href="/Admin/EditActivities" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <!-- Upload Assets -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card admin-card text-center shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="icon-wrapper bg-success text-white mb-3">
                        <i class="bi bi-cloud-upload"></i>
                    </div>
                    <h6 class="card-title">Upload Assets</h6>
                    <p class="small text-muted">Add images, PDFs, and other files.</p>
                    <a href="/Admin/Assets" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <!-- TC Upload -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card admin-card text-center shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="icon-wrapper bg-success text-white mb-3">
                        <i class="bi bi-cloud-upload"></i>
                    </div>
                    <h6 class="card-title">TC Upload</h6>
                    <p class="small text-muted">Add images, PDFs</p>
                    <a href="/tc-upload/create" class="stretched-link"></a>
                </div>
            </div>
        </div>

      @*   <!-- User Management -->
