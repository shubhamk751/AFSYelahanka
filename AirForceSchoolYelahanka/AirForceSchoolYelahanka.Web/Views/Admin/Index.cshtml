@model AirForceSchoolYelahanka.Web.ViewModel.CMSEditViewModel

@{
    ViewData["Title"] = "CMS Editor";
}

<h2>Edit CMS Sections</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Save" method="post">
    @for (int i = 0; i < Model.Sections.Count; i++)
    {
        <div class="card mb-3">
            <div class="card-header">
                @Model.Sections[i].Key
                <input type="hidden" asp-for="@Model.Sections[i].Key" />
            </div>
            <div class="card-body">
                <textarea asp-for="@Model.Sections[i].ContentJson" class="form-control" rows="10"></textarea>
                <span asp-validation-for="@Model.Sections[i].ContentJson" class="text-danger"></span>
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save All</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

