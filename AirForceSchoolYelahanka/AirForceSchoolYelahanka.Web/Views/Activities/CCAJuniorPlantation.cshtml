@{
    ViewData["Title"] = "CCA Plantation Drive";

    var imageDir = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images", "activities", "cca", "junior", "plantation");
    var imageFiles = Directory.Exists(imageDir)
        ? Directory.GetFiles(imageDir).Where(f => f.EndsWith(".jpg") || f.EndsWith(".jpeg") || f.EndsWith(".png")).ToList()
        : new List<string>();

    var webImagePaths = imageFiles
        .Select(f => "/images/activities/cca/junior/plantation/" + System.IO.Path.GetFileName(f))
        .ToList();
}

<!-- ================== Hero Banner ================== -->
<section class="bg-success text-white py-5">
    <div class="container text-center">
        <h1 class="display-5 fw-bold">Plantation Drive by Junior Wing</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a href="/cca-junior" class="text-white text-decoration-none">CCA - Junior Wing</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">Plantation</li>
            </ol>
        </nav>
    </div>
</section>

<!-- ================== Main Content ================== -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-5">
            <!-- ========== Left Column: Content ========== -->
            <div class="col-lg-8">
                <article>
                    <p class="lead text-muted">
                        The Plantation Drive was organized by the Junior Wing of Air Force School Yelahanka to foster environmental awareness and responsibility among students. Students eagerly participated in planting saplings and understanding the importance of trees in maintaining ecological balance.
                    </p>

                    <h5 class="mt-4">Objectives:</h5>
                    <ul class="mb-4">
                        <li>Encourage eco-friendly habits and sustainability.</li>
                        <li>Educate students about climate change and green cover.</li>
                        <li>Develop respect for nature through hands-on activities.</li>
                    </ul>

                    <h5>Event Highlights:</h5>
                    <ul>
                        <li>100+ saplings planted in and around the school premises.</li>
                        <li>Participation from students of all Junior Wing grades.</li>
                        <li>Special session by local forest department official.</li>
                    </ul>

                    <blockquote class="blockquote mt-4 border-start border-3 ps-3 text-muted">
                        <p class="fst-italic mb-0">“A small act of planting today nurtures a better tomorrow.”</p>
                    </blockquote>

                    <p class="mt-4 text-muted">
                        The drive was a hands-on educational experience for the children and helped them understand their vital role in building a greener and cleaner Earth.
                    </p>
                </article>
            </div>

            <!-- ========== Right Column: Sidebar ========== -->
            <div class="col-lg-4">
                <!-- Related Activities -->
                <aside>
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Other Junior Wing Activities</h5>
                            <ul class="list-unstyled">
                                <li><a href="/cca-junior-diwali" class="text-decoration-none d-block py-1">🪔 Diwali Celebrations</a></li>
                                <li><a href="/cca-junior-othercca" class="text-decoration-none d-block py-1">🎤 Co-Curricular Activities</a></li>
                            </ul>
                        </div>
                    </div>
                </aside>

                <!-- Image Gallery -->
                @if (webImagePaths.Any())
                {
                    <aside>
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title mb-3">Event Snippets</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var imagePath in webImagePaths)
                                    {
                                        <a href="@imagePath" class="glightbox" data-gallery="plantation-gallery">
                                            <img src="@imagePath" class="img-thumbnail gallery-thumb" alt="Plantation Image">
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </aside>
                }
            </div>
        </div>
    </div>
</section>