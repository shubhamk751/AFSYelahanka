@{
    ViewData["Title"] = "CCA Junior Diwali";

    var imageDir = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images", "activities", "cca", "junior", "diwali");
    var imageFiles = Directory.Exists(imageDir)
        ? Directory.GetFiles(imageDir).Where(f => f.EndsWith(".jpg") || f.EndsWith(".jpeg") || f.EndsWith(".png")).ToList()
        : new List<string>();

    var webImagePaths = imageFiles
        .Select(f => "/images/activities/cca/junior/diwali/" + System.IO.Path.GetFileName(f))
        .ToList();
}

<!-- ================== Hero Banner ================== -->
<section class="bg-warning text-dark py-5" style="background: linear-gradient(to right, #ffc107, #fff3cd);">
    <div class="container text-center">
        <h1 class="display-5 fw-bold">Diwali Celebrations at Junior Wing</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-dark text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a href="/cca-junior" class="text-dark text-decoration-none">CCA - Junior Wing</a></li>
                <li class="breadcrumb-item active text-dark" aria-current="page">Diwali</li>
            </ol>
        </nav>
    </div>
</section>

<!-- ================== Main Content ================== -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-5">
            <!-- ========== Left Column: Content ========== -->
            <div class="col-lg-8">
                <article>
                    <p class="lead text-muted">
                        The Junior Wing of Air Force School Yelahanka celebrated Diwali with enthusiasm and cultural fervour. The event aimed to foster a sense of tradition and unity among students while promoting values like sharing joy and celebrating togetherness.
                    </p>

                    <h5 class="mt-4">Key Highlights:</h5>
                    <ul class="mb-4">
                        <li>Students dressed in vibrant traditional attire.</li>
                        <li>Decorative diyas, rangoli, and festive crafts adorned classrooms.</li>
                        <li>Cultural performances including dance and singing by students.</li>
                        <li>Diwali messages focusing on eco-friendly celebrations.</li>
                    </ul>

                    <blockquote class="blockquote mt-4 border-start border-3 ps-3 text-muted">
                        <p class="fst-italic mb-0">“Diwali is the festival of lights, illuminating hearts with joy and knowledge.”</p>
                    </blockquote>

                    <p class="mt-4 text-muted">
                        Teachers emphasized the significance of a clean and green Diwali. Activities were conducted to educate students about avoiding firecrackers and focusing on family, food, and values.
                    </p>
                </article>
            </div>

            <!-- ========== Right Column: Sidebar ========== -->
            <div class="col-lg-4">
                <!-- Related Activities -->
                <aside>
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Other Junior Wing Activities</h5>
                            <ul class="list-unstyled">
                                <li><a href="/cca-junior-plantation" class="text-decoration-none d-block py-1">🌱 Plantation Drive</a></li>
                                <li><a href="/cca-junior-othercca" class="text-decoration-none d-block py-1">🎤 Co-Curricular Activities</a></li>
                            </ul>
                        </div>
                    </div>
                </aside>

                <!-- Image Gallery -->
                @if (webImagePaths.Any())
                {
                    <aside>
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title mb-3">Event Snippets</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var imagePath in webImagePaths)
                                    {
                                        <a href="@imagePath" class="glightbox" data-gallery="diwali-gallery">
                                            <img src="@imagePath" class="img-thumbnail gallery-thumb" alt="Diwali Image">
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </aside>
                }
            </div>
        </div>
    </div>
</section>