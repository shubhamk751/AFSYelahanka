@{
    ViewData["Title"] = "Co-Curricular Activities";
    var imageDir = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images", "activities", "cca", "junior", "co-curricular");
    var imageFiles = Directory.Exists(imageDir)
        ? Directory.GetFiles(imageDir).Where(f => f.EndsWith(".jpg") || f.EndsWith(".jpeg") || f.EndsWith(".png")).ToList()
        : new List<string>();

    var webImagePaths = imageFiles
        .Select(f => "/images/activities/cca/junior/co-curricular/" + System.IO.Path.GetFileName(f))
        .ToList();
}

<!-- ================== Hero Banner ================== -->
<section class="bg-primary text-white py-5" style="background: linear-gradient(to right, #007bff, #80bdff);">
    <div class="container text-center">
        <h1 class="display-5 fw-bold">Co-Curricular Activities</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a href="/cca-junior" class="text-white text-decoration-none">CCA - Junior Wing</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">Co-Curricular</li>
            </ol>
        </nav>
    </div>
</section>

<!-- ================== Main Content ================== -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-5">
            <!-- ========== Left Column: Content ========== -->
            <div class="col-lg-8">

                <article>
                    <p class="lead text-muted">
                        Air Force School Yelahanka offers a diverse range of co-curricular activities that complement academics and support holistic development of students. These activities help nurture students’ creative, emotional, physical, and social growth.
                    </p>

                    <h5 class="mt-4">Programs Include:</h5>
                    <ul class="mb-4">
                        <li>Art & Craft</li>
                        <li>Dance & Music</li>
                        <li>Quiz Competitions</li>
                        <li>Storytelling and Role Plays</li>
                        <li>Yoga and Physical Education</li>
                        <li>Public Speaking and Debates</li>
                    </ul>

                    <blockquote class="blockquote mt-4 border-start border-3 ps-3 text-muted">
                        <p class="fst-italic mb-0">“Co-curricular activities are the heartbeat of a joyful and engaging school experience.”</p>
                    </blockquote>

                    <p class="mt-4 text-muted">
                        These opportunities empower children with confidence, teamwork, discipline, and creative expression beyond books. The school fosters an inclusive platform for every child to participate, discover talents, and shine.
                    </p>
                </article>
            </div>

            <!-- ========== Right Column: Sidebar ========== -->
            <div class="col-lg-4">
                <!-- Related Activities -->
                <aside>
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Featured Activities</h5>
                            <ul class="list-unstyled">
                                <li><a href="/cca-junior-plantation" class="text-decoration-none d-block py-1">🌱 Plantation Drive</a></li>
                                <li><a href="/cca-junior-diwali" class="text-decoration-none d-block py-1">🪔 Diwali Celebrations</a></li>
                            </ul>
                        </div>
                    </div>
                </aside>

                <!-- Image Gallery -->
                @if (webImagePaths.Any())
                {
                    <aside>
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title mb-3">Activity Gallery</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var imagePath in webImagePaths)
                                    {
                                        <a href="@imagePath" class="glightbox" data-gallery="cocurricular-gallery">
                                            <img src="@imagePath" class="img-thumbnail gallery-thumb" alt="Co-Curricular Image">
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </aside>
                }
            </div>
        </div>
    </div>
</section>