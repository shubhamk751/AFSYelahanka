@model AirForceSchoolYelahanka.Web.ViewModel.Activities.ActivityContentBlockViewModel
@{
    ViewData["Title"] = Model.Title;
}

<!-- ================== Hero Banner ================== -->
<section class="bg-success text-white py-5">
    <div class="container text-center">
        <h1 class="display-5 fw-bold">@Model.Title</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a href="/cca-junior" class="text-white text-decoration-none">CCA - Junior Wing</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</section>

<!-- ================== Main Content ================== -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-5">

            <!-- Main content from CMS -->
            @Html.Raw(Model.HtmlMainContent)

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Sidebar content from CMS -->
                @Html.Raw(Model.HtmlSidebarContent)

                <!-- Dynamic gallery from folder -->
                @if (Model.SidebarImageUrls.Any())
                {
                    <aside>
                        <div class="card shadow-sm mt-4">
                            <div class="card-body">
                                <h6 class="card-title mb-3">Event Snippets</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var imagePath in Model.SidebarImageUrls)
                                    {
                                        <a href="@imagePath" class="glightbox" data-gallery="event-gallery">
                                            <img src="@imagePath" class="img-thumbnail gallery-thumb" alt="Event Image" style="width: 100px; height: auto;">
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </aside>
                }
            </div>
        </div>
    </div>
</section>
