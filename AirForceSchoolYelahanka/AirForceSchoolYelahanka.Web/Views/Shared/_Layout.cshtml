<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirForceSchoolYelahanka.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AirForceSchoolYelahanka.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@500;600&display=swap" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css">

</head>

<body class="d-flex flex-column min-vh-100">
    <!-- 🌊 Global Animated Wave Background -->
    <div class="global-wave-background">
        <svg class="global-waves" viewBox="0 0 1440 320" preserveAspectRatio="none">
            <path fill="#fbbf24" fill-opacity="1"
                  d="M0,64L48,85.3C96,107,192,149,288,176C384,203,480,213,576,208C672,203,768,181,
                     864,165.3C960,149,1056,139,1152,160C1248,181,1344,235,1392,261.3L1440,288L1440,320L0,320Z">
                <animate attributeName="d" dur="10s" repeatCount="indefinite"
                         values="
                         M0,64L48,85.3C96,107,192,149,288,176C384,203,480,213,576,208C672,203,768,181,864,165.3C960,149,
                         1056,139,1152,160C1248,181,1344,235,1392,261.3L1440,288L1440,320L0,320Z;

                         M0,96L48,106.7C96,117,192,139,288,149.3C384,160,480,160,576,170.7C672,181,768,203,864,197.3C960,192,
                         1056,160,1152,165.3C1248,171,1344,213,1392,234.7L1440,256L1440,320L0,320Z;

                         M0,64L48,85.3C96,107,192,149,288,176C384,203,480,213,576,208C672,203,768,181,864,165.3C960,149,
                         1056,139,1152,160C1248,181,1344,235,1392,261.3L1440,288L1440,320L0,320Z;
                         " />
            </path>
        </svg>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light custom-navbar shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center fw-bold text-uppercase" href="/">
                    <img src="/assets/images/shared/logo.png" alt="Logo" class="school-logo me-2" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>

                        <!-- About Us -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="aboutDropdown" role="button" data-bs-toggle="dropdown">
                                About Us
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#our-vision">Our Vision</a></li>
                                <li><a class="dropdown-item" href="#our-mission">Our Mission</a></li>
                                <li><a class="dropdown-item" href="#objectives">Objectives</a></li>
                                <li><a class="dropdown-item" href="#leadership">Leadership</a></li>
                                <li><a class="dropdown-item" href="/hierarchy">Institutional Hierarchy</a></li>
                            </ul>
                        </li>

                        <!-- School Info -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                School Handbook
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/team-&-visiting-hours">Team</a></li>
                                <li><a class="dropdown-item" href="/timings">Timings</a></li>
                                <li><a class="dropdown-item" href="/uniform">Uniform</a></li>
                                <li><a class="dropdown-item" href="/fees">Fee Structure</a></li>
                                <li><a class="dropdown-item" href="/book-list">Book List</a></li>
                                <li><a class="dropdown-item" href="/disclosures">Mandatory Disclosures</a></li>
                            </ul>
                        </li>

                        <!-- Academics -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Academics
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/academics/junior">Junior Wing</a></li>
                                <li><a class="dropdown-item" href="/academics/senior">Senior Wing</a></li>
                            </ul>
                        </li>

                        <!-- Infrastructure -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Infrastructure
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/junior-wing">Junior Wing</a></li>
                                <li><a class="dropdown-item" href="/senior-wing">Senior Wing</a></li>
                            </ul>
                        </li>

                        <!-- Activities -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Activities
                            </a>
                            <ul class="dropdown-menu">
                                <!-- First submenu -->
                                <li class="dropdown-submenu position-relative">
                                    <a class="dropdown-item dropdown-toggle" href="#">Co-Curricular</a>
                                    <ul class="dropdown-menu start-100 top-0 mt-0">
                                        <li><a class="dropdown-item" href="/cca-junior">Junior Wing</a></li>
                                        <li><a class="dropdown-item" href="/cca-senior">Senior Wing</a></li>
                                    </ul>
                                </li>

                                <!-- Second submenu -->
                                <li class="dropdown-submenu position-relative">
                                    <a class="dropdown-item dropdown-toggle" href="#">Celebrations</a>
                                    <ul class="dropdown-menu start-100 top-0 mt-0">
                                        <li><a class="dropdown-item" href="/activities-celebrations-junior">Junior Wing</a></li>
                                        <li><a class="dropdown-item" href="/activities/celebrations/senior">Senior Wing</a></li>
                                    </ul>
                                </li>

                                <li><a class="dropdown-item" href="/activities/sports">Sports</a></li>
                                <li><a class="dropdown-item" href="/activities/scouts-guides">Scouts & Guides</a></li>
                                <li><a class="dropdown-item" href="/activities/ncc">NCC</a></li>
                                <li><a class="dropdown-item" href="/activities/magazine">Magazine</a></li>
                            </ul>
                        </li>


                        <!-- News -->
                        <li class="nav-item">
                            <a class="nav-link" href="#news-notices">News</a>
                        </li>

                        <!-- Contact -->
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-auto">
        <div class="container text-center small">
            © 2025 Air Force School Yelahanka — All rights reserved.
            <a href="/privacy" class="text-white text-decoration-underline ms-2">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js" asp-append-version="true"></script>
    <script asp-append-version="true">
        document.addEventListener("DOMContentLoaded", function () {
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: false
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
    <script>
        const lightbox = GLightbox({ selector: '.glightbox' });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
