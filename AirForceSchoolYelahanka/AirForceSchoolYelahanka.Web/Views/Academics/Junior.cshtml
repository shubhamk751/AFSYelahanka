@{
    ViewData["Title"] = "Junior Wing Academics";

    var imageDir = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "assets", "images", "academics", "junior", "gallery");
    var imageFiles = Directory.Exists(imageDir)
        ? Directory.GetFiles(imageDir).Where(f => f.EndsWith(".jpg") || f.EndsWith(".jpeg") || f.EndsWith(".png")).ToList()
        : new List<string>();
    var webImagePaths = imageFiles.Select(f => "/assets/images/academics/junior/gallery/" + System.IO.Path.GetFileName(f)).ToList();
}

<section class="container my-4">

    <!-- Banner -->
    <div class="position-relative rounded overflow-hidden shadow-sm mb-4"
         data-aos="zoom-in" data-aos-delay="100">
        <img src="/assets/images/academics/junior/banner/junior-wing.jpg"
             alt="Junior Wing Banner"
             class="img-fluid w-100" style="max-height: 320px; object-fit: cover;">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-3 w-75"
             data-aos="fade-down" data-aos-duration="800">
            <h1 class="fw-bold display-6" style="text-shadow: 1px 1px 4px rgba(0,0,0,0.7);">
                Junior Wing
            </h1>
        </div>
    </div>

    <!-- Card -->
    <div class="card border-0 shadow-sm" data-aos="fade-up" data-aos-delay="200" style="margin-bottom: 1rem;">
        <div class="card-body">

            <!-- About -->
            <h2 class="h4 text-primary fw-bold mb-3" data-aos="fade-right">
                About Junior Wing
            </h2>
            <p class="mb-4" data-aos="fade-up" data-aos-delay="100">
                The Junior Wing follows the Air HQ CBSE syllabus (NCERT framework) in line with the vision of the National Education Policy (NEP) 2020.
            </p>

            <!-- Best Practices -->
            <h3 class="h5 text-primary fw-bold mb-3" data-aos="fade-left" data-aos-delay="150">
                Best Practices in the Junior Wing
            </h3>

            <div class="row align-items-start mb-4">
                <!-- Image on Left -->
                <div class="col-md-4 mb-3 mb-md-0">
                    <img src="/assets/images/academics/junior/junior-wing-lf.png"
                         alt="Pre-Primary: Speak"
                         class="img-fluid rounded shadow-sm">
                </div>

                <!-- Text on Right -->
                <div class="col-md-8">
                    <!-- Pre-Primary: Speak -->
                    <div class="mb-4" data-aos="fade-right" data-aos-delay="200">
                        <h4 class="h6 text-secondary fw-semibold">Pre-Primary: Speak, Play and Learn </h4>
                        <ul class="mb-0">
                            <li>Development of communication skills with focus on pronunciation, phonetics, and fluency.</li>
                            <li>Use of interactive teaching aids to make learning joyful and engaging.</li>
                            <li>Activity-based learning to build confidence and self-expression.</li>
                            <li>Play-based pedagogy and circle-time activities that encourage social interaction and collaboration.</li>
                            <li>Emphasis on good manners, respect, and teamwork.</li>
                            <li>Early exposure to digital literacy, gender sensitivity, and hygiene habits in line with NEP’s life-skills approach.</li>
                        </ul>
                    </div>

                    <!-- Pre-Primary: Play and Learn -->
                    <div class="mb-4" data-aos="fade-left" data-aos-delay="300">
                        <h4 class="h6 text-secondary fw-semibold">Primary Wing – Nurturing Young Minds</h4>
                        <ul class="mb-0">
                            <li>Academic Excellence – A well-structured, activity-based curriculum encourages conceptual understanding, critical thinking, and problem-solving skills.</li>
                            <li>Creative & Performing Arts – Opportunities in art, music, dance, and theatre help children express themselves and develop aesthetic appreciation.</li>
                            <li>Sports & Physical Education – Regular physical activities, games, and yoga ensure fitness, teamwork, and a spirit of healthy competition.</li>
                            <li>Values & Life Skills – Emphasis on moral values, communication skills, and social responsibility builds character and empathy.</li>
                            <li>Technology & Innovation – Exposure to digital tools and STEAM-based learning nurtures curiosity, innovation, and readiness for the future.</li>
                        </ul>
                    </div>

                </div>
            </div>


            <!-- Gallery -->
          @*   <h3 class="h5 text-primary fw-bold mb-3" data-aos="fade-up" data-aos-delay="400">
                Gallery
            </h3>

            <div class="dock-gallery d-flex flex-nowrap overflow-auto px-3">
                @foreach (var imagePath in webImagePaths)
                {
                    var fileName = System.IO.Path.GetFileNameWithoutExtension(imagePath);
                    var title = System.Globalization.CultureInfo.CurrentCulture.TextInfo
                    .ToTitleCase(fileName.Replace("-", " ").Replace("_", " "));

                    <div class="dock-item text-center mx-2" data-aos="zoom-in" data-aos-delay="100">
                        <div class="dock-inner d-flex flex-column align-items-center">
                            <a href="@imagePath" class="glightbox" data-gallery="junior-gallery"> // data-title="@title" if caption is required I will add this in a tag
                                <img src="@imagePath" alt="@title" class="dock-img" />
                            </a>
                        </div>
                    </div>
                }
            </div> *@

        </div>
    </div>
</section>
