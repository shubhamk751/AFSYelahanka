@{
    ViewData["Title"] = "Junior Wing Academics";

    var imageDir = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "assets", "images", "academics", "junior", "gallery");
    var imageFiles = Directory.Exists(imageDir)
        ? Directory.GetFiles(imageDir).Where(f => f.EndsWith(".jpg") || f.EndsWith(".jpeg") || f.EndsWith(".png")).ToList()
        : new List<string>();
    var webImagePaths = imageFiles.Select(f => "/assets/images/academics/junior/gallery/" + System.IO.Path.GetFileName(f)).ToList();
}

<section class="container my-4">

    <!-- Banner -->
    <div class="position-relative rounded overflow-hidden shadow-sm mb-4"
         data-aos="zoom-in" data-aos-delay="100">
        <img src="/assets/images/academics/junior/banner/junior-wing.jpg"
             alt="Junior Wing Banner"
             class="img-fluid w-100" style="max-height: 320px; object-fit: cover;">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-3"
             data-aos="fade-down" data-aos-duration="800">
            <h1 class="fw-bold display-6" style="text-shadow: 1px 1px 4px rgba(0,0,0,0.7);">
                Junior Wing (LKG to Class II)
            </h1>
        </div>
    </div>

    <!-- Card -->
    <div class="card border-0 shadow-sm" data-aos="fade-up" data-aos-delay="200" style="margin-bottom: 1rem;">
        <div class="card-body">

            <!-- About -->
            <h2 class="h4 text-primary fw-bold mb-3" data-aos="fade-right">
                About Junior Wing
            </h2>
            <p class="mb-4" data-aos="fade-up" data-aos-delay="100">
                The academic system follows the Air HQ CBSE syllabus (NCERT framework).
                Teaching is student-centric, project-based, and technology-integrated.
                Students are encouraged to develop academic interests as well as talents in
                sports, theatre, music, and dance.
            </p>

            <!-- Best Practices -->
            <h3 class="h5 text-primary fw-bold mb-3" data-aos="fade-left" data-aos-delay="150">
                Best Practices Followed in the School
            </h3>

            <!-- Pre-Primary: Speak -->
            <div class="row align-items-center mb-4" data-aos="fade-right" data-aos-delay="200">
                <div class="col-md-4 mb-3 mb-md-0">
                    <img src="/assets/images/academics/junior/best-practice-speak.jpg"
                         alt="Pre-Primary Speak"
                         class="img-fluid rounded shadow-sm">
                </div>
                <div class="col-md-8">
                    <h4 class="h6 text-secondary fw-semibold">Pre-Primary: Speak</h4>
                    <ul class="mb-0">
                        <li>Emphasis on pronunciation, phonetics & proficiency.</li>
                        <li>Use of teaching aids to make learning fun.</li>
                        <li>Activity-based teaching methods.</li>
                    </ul>
                </div>
            </div>

            <!-- Pre-Primary: Play and Learn -->
            <div class="row align-items-center mb-4 flex-md-row-reverse" data-aos="fade-left" data-aos-delay="300">
                <div class="col-md-4 mb-3 mb-md-0">
                    <img src="/assets/images/academics/junior/best-practice-play.jpg"
                         alt="Pre-Primary Play and Learn"
                         class="img-fluid rounded shadow-sm">
                </div>
                <div class="col-md-8">
                    <h4 class="h6 text-secondary fw-semibold">Pre-Primary: Play and Learn</h4>
                    <ul class="mb-0">
                        <li>Circle-time seating fosters group interaction and social skills.</li>
                        <li>Teaching good manners and teamwork.</li>
                        <li>Introduction to computers, gender sensitivity, and hygiene habits.</li>
                    </ul>
                </div>
            </div>

            <!-- Gallery -->
            <h3 class="h5 text-primary fw-bold mb-3" data-aos="fade-up" data-aos-delay="400">
                Gallery
            </h3>

            <div class="dock-gallery d-flex flex-nowrap overflow-auto px-3">
                @foreach (var imagePath in webImagePaths)
                {
                    var fileName = System.IO.Path.GetFileNameWithoutExtension(imagePath);
                    var title = System.Globalization.CultureInfo.CurrentCulture.TextInfo
                    .ToTitleCase(fileName.Replace("-", " ").Replace("_", " "));

                    <div class="dock-item text-center mx-2" data-aos="zoom-in" data-aos-delay="100">
                        <div class="dock-inner d-flex flex-column align-items-center">
                            <a href="@imagePath" class="glightbox" data-gallery="junior-gallery"> @* data-title="@title" if caption is required I will add this in a tag*@
                                <img src="@imagePath" alt="@title" class="dock-img" />
                            </a>
                            @* <p class="small mt-2 mb-1">@title</p> *@
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</section>
