@{
    ViewData["Title"] = "Exam Schedule";
}

<section id="exam-schedule">
    <div class="container">
        <div class="text-center section-header mb-4">
            <h2 class="fw-bold text-primary">Exam Schedule</h2>
            @* <p class="text-muted">Class IX to XII Examination Details</p> *@
        </div>

        <div class="accordion" id="examAccordion">

            <!-- Periodic Test I -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="examHeadingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#examCollapseOne">
                        Periodic Test I
                    </button>
                </h2>
                <div id="examCollapseOne" class="accordion-collapse collapse" data-bs-parent="#examAccordion">
                    <div class="accordion-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a target="_blank" href="/assets/files/academics/exams/Periodic_Test_I.pdf">Download Schedule</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Half Yearly Examination -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="examHeadingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#examCollapseTwo">
                        Half Yearly Examination
                    </button>
                </h2>
                <div id="examCollapseTwo" class="accordion-collapse collapse" data-bs-parent="#examAccordion">
                    <div class="accordion-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a target="_blank" href="/assets/files/academics/exams/Half_Yearly.pdf">Download Schedule</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Periodic Test II -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="examHeadingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#examCollapseThree">
                        Periodic Test II
                    </button>
                </h2>
                <div id="examCollapseThree" class="accordion-collapse collapse" data-bs-parent="#examAccordion">
                    <div class="accordion-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a target="_blank" href="/assets/files/academics/exams/Periodic_Test_II.pdf">Download Schedule</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Annual Examination -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="examHeadingFour">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#examCollapseFour">
                        Annual Examination
                    </button>
                </h2>
                <div id="examCollapseFour" class="accordion-collapse collapse" data-bs-parent="#examAccordion">
                    <div class="accordion-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a target="_blank" href="/assets/files/academics/exams/Annual_Exam.pdf">Download Schedule</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div> <!-- End examAccordion -->
    </div>
</section>
