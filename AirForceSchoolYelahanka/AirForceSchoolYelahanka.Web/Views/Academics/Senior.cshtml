@{
    ViewData["Title"] = "Senior Wing Academics";

    var imageDir = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "assets", "images", "academics", "senior", "gallery");
    var imageFiles = Directory.Exists(imageDir)
        ? Directory.GetFiles(imageDir).Where(f => f.EndsWith(".jpg") || f.EndsWith(".jpeg") || f.EndsWith(".png")).ToList()
        : new List<string>();
    var webImagePaths = imageFiles.Select(f => "/assets/images/academics/senior/gallery/" + System.IO.Path.GetFileName(f)).ToList();
}

<section class="container my-4">

    <!-- Banner -->
    <div class="position-relative rounded overflow-hidden shadow-sm mb-4"
         data-aos="zoom-in" data-aos-delay="100">
        <img src="/assets/images/academics/senior/banner/senior-wing.jpg"
             alt="Senior Wing Banner"
             class="img-fluid w-100" style="max-height: 320px; object-fit: cover;">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-3 w-75"
             data-aos="fade-down" data-aos-duration="800">
            <h1 class="fw-bold display-6" style="text-shadow: 1px 1px 4px rgba(0,0,0,0.7);">
                Senior Wing
            </h1>
        </div>
    </div>

    <!-- Card -->
    <div class="card border-0 shadow-sm" data-aos="fade-up" data-aos-delay="200" style="margin-bottom: 1rem;">
        <div class="card-body">

            <!-- About -->
            <h2 class="h4 text-primary fw-bold mb-3" data-aos="fade-right">
                About Senior Wing
            </h2>
            <p class="mb-4" data-aos="fade-up" data-aos-delay="100">
                The Senior Wing follows the syllabus prescribed by Air HQ, New Delhi, in alignment with the vision of the National Education Policy (NEP) 2020. The teaching approach is student-centric, project-based, and experiential, emphasizing critical thinking, problem-solving, and inquiry-driven learning. Students actively participate in hands-on experiences that bridge classroom knowledge with real-world applications.
            </p>
            <h4 class="h6 text-secondary fw-semibold">Aligned with NEP 2020, our Senior Wing emphasizes:</h4>
            <ul class="mb-0">
                <li>Holistic and multidisciplinary education with real-life applications.</li>
                <li>STEAM-based learning that integrates sciences with creativity and innovation.</li>
                <li>Smart classrooms that leverage digital resources for collaborative and interactive learning.</li>
                <li>21st-century skill development – communication, collaboration, creativity, and critical thinking.</li>
                <li>Value-based education to prepare responsible, empathetic, and future-ready citizens.</li>
            </ul>

            <p class="mb-4" data-aos="fade-up" data-aos-delay="200">
                ✨ The Senior Wing envisions preparing students for higher education and the challenges of the modern world by equipping them with knowledge, skills, and values that blend tradition with innovation.
            </p>
            <!-- Gallery -->
            @* <h3 class="h5 text-primary fw-bold mb-3 mt-4" data-aos="fade-up" data-aos-delay="300">
                Senior Wing Gallery
            </h3>

            <div class="dock-gallery d-flex flex-nowrap overflow-auto px-3">
                @foreach (var imagePath in webImagePaths)
                {
                    var fileName = System.IO.Path.GetFileNameWithoutExtension(imagePath);
                    var title = System.Globalization.CultureInfo.CurrentCulture.TextInfo
                    .ToTitleCase(fileName.Replace("-", " ").Replace("_", " "));

