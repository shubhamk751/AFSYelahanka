@model List<AirForceSchoolYelahanka.Web.ViewModel.Home.ActivityItem>

<div class="recent-activities-carousel">
    <h3>Recent Activities</h3>
    <div class="carousel slide" data-bs-ride="carousel" id="activitiesCarousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                var activity = Model[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@activity.ImageUrl" class="d-block w-100" alt="@activity.Caption">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@activity.Caption</h5>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#activitiesCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#activitiesCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>
