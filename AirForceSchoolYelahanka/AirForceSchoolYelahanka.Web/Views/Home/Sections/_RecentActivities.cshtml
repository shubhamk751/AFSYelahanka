@model List<AirForceSchoolYelahanka.Web.ViewModel.Home.ActivityItem>

<div class="col-md-4" data-aos="fade-left" data-aos-delay="800">
    <div class="card shadow-sm h-100">
        <div class="card-header bg-success text-white d-flex align-items-center">
            <i class="bi bi-calendar-event me-2"></i>
            <h5 class="mb-0">Recent Activities</h5>
        </div>
        <div class="card-body p-0">
            <div class="scroll-marquee p-3">
                <ul class="marquee-list">
                    @foreach (var activity in Model)
                    {
                        <li><strong>@activity.Title - @activity.Date.ToString("dd MMM yyyy")</strong></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
