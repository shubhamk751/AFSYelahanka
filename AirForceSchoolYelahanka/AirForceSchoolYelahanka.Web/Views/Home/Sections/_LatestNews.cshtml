@model List<AirForceSchoolYelahanka.Web.ViewModel.Home.NewsItem>

<div class="col-md-4" data-aos="fade-right" data-aos-delay="600">
    <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-newspaper me-2"></i>
            <h5 class="mb-0">Latest News</h5>
        </div>
        <div class="card-body p-0">
            <div class="scroll-marquee p-3">
                <ul class="marquee-list">
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="@item.Link">
                                <strong>@item.Title – @item.Date.ToString("dd MMM yyyy")</strong>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
