<section class="py-5" id="news-notices">
    <div class="container">
        <div class="row g-4">

            <!-- Latest News -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white d-flex align-items-center">
                        <i class="bi bi-newspaper me-2"></i>
                        <h5 class="mb-0">Latest News</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="scroll-marquee p-3">
                            <ul class="marquee-list">
                                @foreach (var item in Model.LatestNews.Concat(Model.LatestNews))
                                {
                                    <li>@item.Title – @item.Date.ToString("dd MMM yyyy")</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notice Board -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-warning text-dark d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <h5 class="mb-0">Notice Board</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="scroll-marquee p-3">
                            <ul class="marquee-list">
                                @foreach (var item in Model.NoticeBoard.Concat(Model.NoticeBoard))
                                {
                                    <li>@item.Title – @item.Date.ToString("dd MMM yyyy")</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white d-flex align-items-center">
                        <i class="bi bi-calendar-event me-2"></i>
                        <h5 class="mb-0">Recent Activities</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="scroll-marquee p-3">
                            <ul class="marquee-list">
                                @foreach (var activity in Model.RecentActivities.Concat(Model.RecentActivities))
                                {
                                    <li><strong>@activity.Caption</strong></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>




