@{
    ViewData["Title"] = "Book List";
    var classNames = new List<string> {
        "Nursery", "LKG", "UKG", "I", "II", "III", "IV", "V", "VI", "VII", "VIII", "IX", "X"
    };
}

<section id="book-list">
    <div class="container">
        <div class="text-center section-header mb-4" data-aos="fade-up">
            <h2 class="fw-bold text-primary">Book List 2025–26</h2>
            <p class="text-center">Essential textbooks & notebooks for Nursery to XII</p>
        </div>

        <div class="row g-4">
            @for (int i = 0; i < classNames.Count; i++)
            {
                string fileName;
                if (i == 0) fileName = "class-nursery.pdf";     // Nursery
                else if (i == 1) fileName = "class-lkg.pdf";   // LKG
                else if (i == 2) fileName = "class-ukg.pdf";   // UKG
                else fileName = $"class-{i - 2}.pdf";          // Class 1–10

                <div class="col-6 col-md-4 col-lg-3" data-aos="zoom-in">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@classNames[i]</h5>
                            <p class="text-muted mb-4 small">View or download book list.</p>
                            <div class="mt-auto">
                                <a href="/assets/files/handbook/book-list/@fileName" class="btn btn-outline-primary btn-sm w-100 mb-2" target="_blank">
                                    <i class="bi bi-eye-fill me-1"></i> View
                                </a>
                                <a href="/assets/files/handbook/book-list/@fileName" download class="btn btn-primary btn-sm w-100">
                                    <i class="bi bi-download me-1"></i> Download
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Class 11 & 12 Commerce & Science -->
            @foreach (var stream in new[] { "Commerce", "Science" })
            {
                for (int cls = 11; cls <= 12; cls++)
                {
                    var file = $"class-{cls}-{stream.ToLower()}.pdf";
                    <div class="col-6 col-md-4 col-lg-3" data-aos="zoom-in">
                        <div class="card shadow-sm h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-primary">Class @cls – @stream</h5>
                                <p class="text-muted mb-4 small">Books for @stream stream.</p>
                                <div class="mt-auto">
                                    <a href="/assets/files/handbook/book-list/@file" class="btn btn-outline-primary btn-sm w-100 mb-2" target="_blank">
                                        <i class="bi bi-eye-fill me-1"></i> View
                                    </a>
                                    <a href="/assets/files/handbook/book-list/@file" download class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-download me-1"></i> Download
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
