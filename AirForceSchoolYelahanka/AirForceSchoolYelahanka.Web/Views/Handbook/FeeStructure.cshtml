<section id="fee-accordion" class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Fee Structure 2025–26</h2>
            <p class="text-muted">Click to expand and view the fees</p>
        </div>

        <div class="accordion" id="feeAccordion">
            <!-- New Admission -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingNew">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNew" aria-expanded="false" aria-controls="collapseNew">
                        New Admission - Qtr I
                    </button>
                </h2>
                <div id="collapseNew" class="accordion-collapse collapse" aria-labelledby="headingNew" data-bs-parent="#feeAccordion">
                    <div class="accordion-body text-center">
                        <img src="/assets/images/almanac/fees/feeNA.jpg" class="img-fluid mb-2" alt="New Admission Fee">
                        <br>
                        <a href="/assets/images/almanac/fees/feeNA.jpg" target="_blank" class="btn btn-primary btn-sm">Open</a>
                    </div>
                </div>
            </div>

            <!-- Existing Students -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingExisting">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExisting" aria-expanded="false" aria-controls="collapseExisting">
                        Existing Students - Qtr I
                    </button>
                </h2>
                <div id="collapseExisting" class="accordion-collapse collapse" aria-labelledby="headingExisting" data-bs-parent="#feeAccordion">
                    <div class="accordion-body text-center">
                        <img src="/assets/images/almanac/fees/feeES.jpg" class="img-fluid mb-2" alt="Existing Students Fee">
                        <br>
                        <a href="/assets/images/almanac/fees/feeES.jpg" target="_blank" class="btn btn-primary btn-sm">Open</a>
                    </div>
                </div>
            </div>

            <!-- All Students -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingRest">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRest" aria-expanded="false" aria-controls="collapseRest">
                        Qtr II, Qtr III and Qtr IV
                    </button>
                </h2>
                <div id="collapseRest" class="accordion-collapse collapse" aria-labelledby="headingRest" data-bs-parent="#feeAccordion">
                    <div class="accordion-body text-center">
                        <img src="/assets/images/almanac/fees/feeRest.jpg" class="img-fluid mb-2" alt="Rest Students Fee">
                        <br>
                        <a href="/assets/images/almanac/fees/feeRest.jpg" target="_blank" class="btn btn-primary btn-sm">Open</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="fee-structure-schedule">
    <div class="container">
        <div class="text-center section-header mb-4">
            <h2 class="fw-bold text-primary">Fee Schedule & Payment Info</h2>
            <p class="text-center">Quarterly fee collection dates and online payment details</p>
        </div>

        <ul class="nav nav-tabs justify-content-center mb-4 flex-wrap" id="feeTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="dates-tab" data-bs-toggle="tab" data-bs-target="#fee-dates" type="button" role="tab">
                    Fee Dates
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="payment-tab" data-bs-toggle="tab" data-bs-target="#payment-info" type="button" role="tab">
                    Payment Info
                </button>
            </li>
        </ul>

        <div class="tab-content" id="feeTabContent">
            <!-- Fee Dates -->
            <div class="tab-pane fade show active" id="fee-dates" role="tabpanel" aria-labelledby="dates-tab">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold text-primary">Quarterly Fee Collection Dates</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mt-3">
                                <thead class="table-light">
                                    <tr>
                                        <th>Term</th>
                                        <th>Months</th>
                                        <th>Collection Dates</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr><td>I Quarter</td><td>April–June 2025</td><td>16–24 April 2025</td></tr>
                                    <tr><td>II Quarter</td><td>July–Sept 2025</td><td>09–18 July 2025</td></tr>
                                    <tr><td>III Quarter</td><td>Oct–Dec 2025</td><td>09–18 Oct 2025</td></tr>
                                    <tr><td>IV Quarter</td><td>Jan–Mar 2026</td><td>09–18 Jan 2026</td></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Info -->
            <div class="tab-pane fade" id="payment-info" role="tabpanel" aria-labelledby="payment-tab">
                <div class="card shadow-sm border-0 mt-3">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold text-primary">Online Payment Instructions</h5>
                        <p>Dear Parents and Students,</p>
                        <p>AF School Yelahanka has tied up with <strong>HDFC Bank EduQfix</strong> for online school fee payment:</p>
                        <ul class="mb-3">
                            <li>Click the header tab above to go to the HDFC link to make payment.</li>
                            <li>Download the “Qfix” app from the Play Store to remit fees online.</li>
                            <li>Online payment window for II Quarter: <strong>09–18 July 2025</strong>.</li>
                            <li><strong>Late fee of ₹50</strong> will apply from 25 July 2025.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

